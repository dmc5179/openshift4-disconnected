default menu.c32
 prompt 1
 timeout 9
 ONTIMEOUT 1

 menu title ######## Default PXE Boot Menu ########

{% if rhcos_ver[:3] | float < 4.6 %}
 label 1
 menu label ^1) Install Bootstrap Node
 menu default
 kernel rhcos/rhcos-{{ rhcos_ver }}-{{ arch }}-installer-kernel-{{ arch }}
 append initrd=rhcos/rhcos-{{ rhcos_ver }}-{{ arch }}-installer-initramfs.{{ arch }}.img nomodeset rd.neednet=1 coreos.inst=yes coreos.inst.install_dev={{ disk | default('sda') }} coreos.inst.image_url={{ ignserver }}/install/bios.raw.gz coreos.inst.ignition_url={{ ignserver }}/{{ ocp_cluster_name }}/ignition/bootstrap.ign

